<% include components/layout.ejs %>
<ol class="breadcrumb">
	<li>
		<a href="/admin">后台管理</a>
	</li>
	<li class="active">修改文章</li>
</ol>
<div class="container-fluid">
	<h3>当前文章名称：<%= article.title%></h3>
	<form method="post">
		<div class="form-group">
			<label for="category">所属分类:</label>
			<select class="form-control" name="category" id="category">
				<% for(var i=0;i<category.length;i++){ %>
					<option value="<%= category[i].ID %>"><%= category[i].category_name %></option>
				<% } %>
			</select>
		</div>
		<div class="form-group">
			<label for="contentTitle">文章标题：</label>
			<input type="text" class="form-control" name="title" id="contentTitle"
				 value="<%= article.title %>" placeholder="请输入标题" required>
		</div>
		<div class="form-group">
			<label for="contentDescription">文章简介：</label>
			<textarea class="form-control" name="description" id="contentDescription" rows="4"
				  placeholder="请输入简介" required><%= article.description %></textarea>
		</div>
		<div class="form-group">
			<label for="content">文章内容：</label>
			<textarea class="form-control" name="content" id="content" rows="10" 
				 placeholder="请输入内容" required><%= article.content %></textarea>
		</div>
		<button type="submit" class="btn btn-default">提交</button>
	</form>

</div>