<% include components/layout.ejs %>
<div class="container-fluid">
	<ol class="breadcrumb">
		<li>
			<a href="/admin">个人中心</a>
		</li>
		<li class="active">我的文章</li>
	</ol>
	<h3>文章列表</h3>
	<table class="table table-hover table-striped">
		<tr>
			<th>ID</th>
			<th>作者</th>
			<th>所属栏目</th>
			<th>文章标题</th>
			<th>文章简介</th>
			<th>文章内容</th>
			<th>发表时间</th>
			<th>阅读量</th>
			<th>操作</th>
		</tr>
		<% for(var i=0;i<articles.length;i++){ %>
		    <tr>
				<td><%= articles[i].ID %></td>
				<td><%= articles[i].username %></td>
				<td><%= articles[i].category_name %></td>
				<td><%= articles[i].title %></td>
				<td class="col-md-2"><%= articles[i].description %></td>
				<td class="col-md-3"><%= articles[i].content %></td>
				<td><%= articles[i].post_time %></td>
				<td><%= articles[i].n_view %></td>
				<td>
					<a href="/my/article/edit?id=<%= articles[i].ID %>">修改</a>
					<a href="/my/comment?type=<%= articles[i].ID %>">查看该文章下所有评论</a>
					<a href="/my/article/delete?id=<%= articles[i].ID %>">删除</a>
				</td>
		    </tr>
		<% } %>
		</table>
	<% include components/page.ejs %>
</div>