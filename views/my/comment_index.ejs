<% include components/layout.ejs %>
<div class="container-fluid">
	<ol class="breadcrumb">
		<li>
			<a href="/admin">个人中心</a>
		</li>
		<li class="active">评论列表</li>
	</ol>
	<h3>评论列表</h3>
	<table class="table table-hover table-striped">
		<tr>
			<th>ID</th>
			<th>用户名</th>
			<th>所属分类</th>
			<th>文章标题</th>
			<th>评论内容</th>
			<th>评论时间</th>
			<th>操作</th>
		</tr>
		<% for(var i=0;i<comments.length;i++){ %>
		    <tr>
				<td><%= comments[i].ID %></td>
				<td><%= comments[i].username %></td>
				<td><%= comments[i].category_name %></td>
				<td><%= comments[i].title %></td>
				<td class="col-md-3"><%= comments[i].content %></td>
				<td><%= comments[i].comment_time %></td>
				<td>
					<a href="/admin/comment/delete?id=<%= comments[i].ID %>">删除</a>
				</td>
		    </tr>
		<% } %>
		</table>
	<% include components/page.ejs %>
</div>